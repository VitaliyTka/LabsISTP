@model Lab1_ISTP.Packings

@{
    ViewData["Title"] = "Create";
}

<h1>Створити нову пакунок @ViewBag.Data , @ViewBag.InputId</h1>

<h4>Packings</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (@ViewBag.Check == "perfumeInformation")
            {
                <div class="form-group">
                    <label asp-for="TypePackingId" class="control-label"></label>
                    <select asp-for="TypePackingId" class="form-control" asp-items="ViewBag.TypePackingId"></select>
                </div>
                <input type="hidden" value="@ViewBag.InputId" name="PerfumeInformationId">
            }
            @if (@ViewBag.Check == "typesPacking")
            {
                <div class="form-group">
                    <label asp-for="PerfumeInformationId" class="control-label"></label>
                    <select asp-for="PerfumeInformationId" class="form-control" asp-items="ViewBag.PerfumeInformationId"></select>
                </div>
                <input type="hidden" value="@ViewBag.InputId" name="TypePackingId">
            }

            @if (@ViewBag.Check == "")
            {
                <div class="form-group">
                    <label asp-for="TypePackingId" class="control-label"></label>
                    <select asp-for="TypePackingId" class="form-control" asp-items="ViewBag.TypePackingId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="PerfumeInformationId" class="control-label"></label>
                    <select asp-for="PerfumeInformationId" class="form-control" asp-items="ViewBag.PerfumeInformationId"></select>
                </div>
            }
            <div class="form-group">
                <label asp-for="Volume" class="control-label"></label>
                <input asp-for="Volume" class="form-control" min="10" max="1000"/>
                <span asp-validation-for="Volume" class="text-danger"></span>
            </div>
            <input type="hidden" value="@ViewBag.Check" name="Check">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
