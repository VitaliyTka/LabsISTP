@model Lab1_ISTP.Packings

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Packings</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TypePackingId" class="control-label"></label>
                <select asp-for="TypePackingId" class="form-control" asp-items="ViewBag.TypePackingId"></select>
                <span asp-validation-for="TypePackingId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volume" class="control-label"></label>
                <input asp-for="Volume" class="form-control" min="10" max="1000"/>
                <span asp-validation-for="Volume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerfumeInformationId" class="control-label"></label>
                <select asp-for="PerfumeInformationId" class="form-control" asp-items="ViewBag.PerfumeInformationId"></select>
                <span asp-validation-for="PerfumeInformationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
