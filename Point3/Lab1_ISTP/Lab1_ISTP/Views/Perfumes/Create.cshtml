@model Lab1_ISTP.Perfumes

@{
    ViewData["Title"] = "Create";
}

    <h1>Створити новий парфум з @ViewBag.Data , @ViewBag.InputId</h1>

<h4>Perfumes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (@ViewBag.Check == "price")
            {
                <div class="form-group">
                    <label asp-for="PackingId" class="control-label"></label>
                    <select asp-for="PackingId" class="form-control" asp-items="ViewBag.PackingId"></select>
                </div>
                <input type="hidden" value="@ViewBag.InputId" name="PriceId">
            }
            @if (@ViewBag.Check == "packing")
            {
                <div class="form-group">
                    <label asp-for="PriceId" class="control-label"></label>
                    <select asp-for="PriceId" class="form-control" asp-items="ViewBag.PriceId"></select>
                </div>
                <input type="hidden" value="@ViewBag.InputId" name="PackingId">
            }
            @if (@ViewBag.Check == "")
            {
                <div class="form-group">
                    <label asp-for="PackingId" class="control-label"></label>
                    <select asp-for="PackingId" class="form-control" asp-items="ViewBag.PackingId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="PriceId" class="control-label"></label>
                    <select asp-for="PriceId" class="form-control" asp-items="ViewBag.PriceId"></select>
                </div>
            }

            <input type="hidden" value="@ViewBag.Check" name="Check">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
